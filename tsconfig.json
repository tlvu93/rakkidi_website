{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "pretty": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@shared/*": ["shared/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@layouts/*": ["layouts/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/feature/invoice-extractor/dropzone/pdf-extract.tsx"
  ],
  "exclude": ["node_modules"]
}
